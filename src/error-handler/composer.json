{
    "name": "swoft/error-handler",
    "type": "library",
    "keywords": [
        "php",
        "swoole",
        "swoft",
        "error-handler",
        "exception"
    ],
    "description": "Error Handler Component for Swoft",
    "license": "Apache-2.0",
    "require": {
        "swoft/framework": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Swoft\\ErrorHandler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SwoftTest\\ErrorHandler\\": "test/Cases"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "friendsofphp/php-cs-fixer": "^2.10"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml",
        "cs-fix": "./vendor/bin/php-cs-fixer fix $1"
    }
}
